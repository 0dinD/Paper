@@ -183,6 +183,12 @@ public class TileEntityHopper extends TileEntityLootable implements IHopper, ITi
                     this.update();
                     return true;
                 }
+
+                // Paper start
+                if (world.paperConfig.useHopperCheck && !this.o()) {
+                    this.setCooldown(world.spigotConfig.hopperCheck);
+                }
+                // Paper end
             }
             return false;
         } else {
