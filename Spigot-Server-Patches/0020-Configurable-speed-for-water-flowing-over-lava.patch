+    public int waterOverLavaFlowSpeed;
+    private void waterOverLavaFlowSpeed()
+    {
+        waterOverLavaFlowSpeed = getInt( "water-over-lava-flow-speed", 5 );
+        log( "Water over lava flow speed: " + waterOverLavaFlowSpeed );
+    }
 }
