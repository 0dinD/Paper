     }
+
+    public short keepLoadedRange;
+    private void keepLoadedRange() {
+        keepLoadedRange = (short) getInt("keep-spawn-loaded-range", Math.min(spigotConfig.viewDistance, 8));
+        log( "Keep Spawn Loaded Range: " + (keepLoadedRange/16));
+    }
 }
