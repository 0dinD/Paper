@@ -278,6 +278,7 @@ public class Creeper extends Monster implements PowerableMob {
             // CraftBukkit start
             } else {
                 this.swell = 0;
+                this.entityData.set(DATA_IS_IGNITED, Boolean.valueOf(false)); // Paper
             }
             // CraftBukkit end
         }
