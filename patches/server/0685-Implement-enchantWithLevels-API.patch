index 803a19063c03627dbea79cb1c395ae35aaef2834..aeb72f7c1bef0407eb00f1116948a0d96ff2ea7b 100644
--- a/src/main/java/org/bukkit/craftbukkit/inventory/CraftItemFactory.java
